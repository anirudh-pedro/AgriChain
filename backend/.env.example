# Environment Variables Template
# Copy this file to .env and fill in your actual values

NODE_ENV=development
PORT=4000

# MongoDB Configuration (fallback to local if Atlas fails)
MONGODB_URI=mongodb://localhost:27017/agrichain
MONGODB_ATLAS_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority&appName=<appname>

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-with-strong-random-string
JWT_EXPIRES_IN=7d

# Hyperledger Fabric Configuration
FABRIC_CHANNEL=mychannel
FABRIC_CHAINCODE=agrichain
FABRIC_MSP_ID=Org1MSP
FABRIC_WALLET_PATH=./wallet

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug